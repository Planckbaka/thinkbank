# ThinkBank AI Service .env Example
# Copy to .env and modify as needed

# Database (from root docker-compose)
DB_HOST=localhost
DB_PORT=5432
DB_USER=thinkbank
DB_PASSWORD=thinkbank123
DB_NAME=thinkbank

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# MinIO
MINIO_ENDPOINT=localhost:9000
MINIO_USER=minioadmin
MINIO_PASSWORD=minioadmin123

# gRPC
AI_GRPC_PORT=50051

# Remote LLM API (OpenAI-compatible vLLM server)
LLM_API_URL=http://127.0.0.1:8000/v1
LLM_API_KEY=sk-local
LLM_MODEL=Qwen/Qwen2.5-7B-Instruct-GPTQ-Int4

# Vision captioning model (CPU)
VISION_MODEL=Salesforce/blip-image-captioning-base
